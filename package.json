{
  "name": "freya-slides",
  "version": "0.35.1",
  "description": "Opinionated JSX based slides generator.",
  "homepage": "https://sw.cowtech.it/freya-slides",
  "repository": "github:ShogunPanda/freya-slides",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/freya-slides/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "freya": "bin/freya",
    "create-freya-slideset": "bin/create-freya-slideset"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "predev": "npm run prebuild",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && mkdir dist && cp -a src/assets dist",
    "build": "swc -d dist src",
    "postbuild": "concurrently npm:lint npm:typecheck",
    "format": "prettier -w src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "typecheck": "tsc -p . --emitDeclarationOnly",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.94",
    "@unocss/preset-mini": "^0.57.5",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dante": "^0.26.1",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "markdown-it": "^13.0.2",
    "playwright": "^1.39.0",
    "playwright-chromium": "^1.39.0",
    "pusher-js": "^8.3.0",
    "qrcode-generator": "^1.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "shiki": "^0.14.5",
    "wait-on": "^7.0.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.10.0",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.8",
    "@types/markdown-it": "^13.0.5",
    "@types/react": "^18.2.31",
    "@types/react-dom": "^18.2.14",
    "@types/wait-on": "^5.3.3",
    "concurrently": "^8.2.2",
    "eslint": "^8.52.0",
    "pino": "^8.16.2",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  }
}
