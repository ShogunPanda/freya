{
  "name": "freya-slides",
  "version": "0.40.1",
  "description": "Opinionated JSX based slides generator.",
  "homepage": "https://sw.cowtech.it/freya-slides",
  "repository": "github:ShogunPanda/freya-slides",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/freya-slides/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "freya": "bin/freya",
    "create-freya-slideset": "bin/create-freya-slideset"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./cli": "./dist/cli.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "swc --delete-dir-on-start -D -s -w -d dist src",
    "build": "swc --delete-dir-on-start -D -d dist src",
    "postbuild": "concurrently npm:lint npm:typecheck",
    "format": "prettier -w src",
    "lint": "eslint --cache --ext .js,.jsx,.ts,.tsx src",
    "typecheck": "tsc -p . --emitDeclarationOnly",
    "test": "exit 0",
    "ci": "npm run build",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/formbody": "^7.4.0",
    "@swc/cli": "^0.1.63",
    "@swc/core": "^1.3.101",
    "@unocss/preset-mini": "^0.58.0",
    "@unocss/preset-wind": "^0.58.2",
    "@unocss/transformer-directives": "^0.58.2",
    "chokidar": "^3.5.3",
    "commander": "^11.1.0",
    "dante": "^0.35.1",
    "glob": "^10.3.10",
    "js-yaml": "^4.1.0",
    "markdown-it": "^14.0.0",
    "playwright": "^1.40.1",
    "playwright-chromium": "^1.40.1",
    "pusher-js": "8.4.0-rc2",
    "qrcode-generator": "^1.4.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "wait-on": "^7.2.0",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^9.0.0",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^13.0.7",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/wait-on": "^5.3.4",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "pino": "^8.17.1",
    "prettier": "^3.1.1",
    "typescript": "^5.3.3"
  }
}
