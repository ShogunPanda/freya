{
  "name": "@perseveranza-pets/freya",
  "version": "0.75.1",
  "description": "Opinionated JSX based slides generator.",
  "homepage": "https://sw.cowtech.it/freya",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ShogunPanda/freya.git"
  },
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/freya/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "freya": "bin/freya",
    "create-freya-slideset": "bin/create-freya-slideset"
  },
  "files": [
    "bin",
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    ".": "./dist/index.js",
    "./client": "./dist/client.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && cp -a src/assets dist && npm run lint && npm run lint:css",
    "format": "prettier -w src",
    "lint": "eslint --cache",
    "lint:css": "stylelint --cache src/**/*.css",
    "test": "exit 0",
    "ci": "npm run build && npm run test",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fortawesome/free-brands-svg-icons": "^7.1.0",
    "@fortawesome/free-solid-svg-icons": "^7.1.0",
    "@perseveranza-pets/dante": "^0.62.2",
    "commander": "^14.0.2",
    "fastify": "^5.6.2",
    "glob": "^13.0.0",
    "http-errors-enhanced": "^4.0.2",
    "js-yaml": "^4.1.1",
    "markdown-it": "^14.1.0",
    "playwright": "^1.57.0",
    "playwright-chromium": "^1.57.0",
    "preact": "^10.27.2",
    "preact-render-to-string": "^6.6.3",
    "preact-router": "^4.1.2",
    "pusher-js": "8.4.0",
    "qrcode-generator": "^2.0.4",
    "rolldown": "1.0.0-beta.52",
    "wait-on": "^9.0.3",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^11.1.3",
    "@cowtech/stylelint-config": "^2.0.5",
    "@cowtech/typescript-config": "^0.2.5",
    "@types/js-yaml": "^4.0.9",
    "@types/markdown-it": "^14.1.2",
    "@types/wait-on": "^5.3.4",
    "eslint": "^9.39.1",
    "lightningcss": "^1.30.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.26.0",
    "typescript": "^5.9.3"
  }
