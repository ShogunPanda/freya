{
  "name": "freya-slides",
  "version": "0.3.1",
  "description": "Opinionated JSX based slides generator.",
  "homepage": "https://sw.cowtech.it/freya-slides",
  "repository": "github:ShogunPanda/freya-slides",
  "keywords": [
    "slides"
  ],
  "bugs": {
    "url": "https://github.com/ShogunPanda/freya-slides/issues"
  },
  "author": "Shogun <shogun@cowtech.it>",
  "license": "ISC",
  "private": false,
  "bin": {
    "freya": "dist/cli/index.js",
    "create-freya-slideset": "dist/cli/create.js"
  },
  "files": [
    "dist",
    "CHANGELOG.md",
    "LICENSE.md",
    "README.md"
  ],
  "type": "module",
  "exports": {
    "./loader": "./dist/loader.js",
    ".": "./dist/index.js"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "predev": "rm -rf dist && mkdir dist && cp -a src/assets dist",
    "dev": "swc -s -w -d dist src",
    "prebuild": "rm -rf dist && mkdir dist && cp -a src/assets dist && npm run lint",
    "build": "swc -d dist src",
    "postbuild": "tsc -p . --emitDeclarationOnly",
    "format": "prettier -w src",
    "lint": "eslint src",
    "ci": "npm run lint",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags"
  },
  "dependencies": {
    "@esbuild-kit/esm-loader": "^2.5.0",
    "@fastify/static": "^6.5.0",
    "@unocss/core": "^0.46.5",
    "@unocss/preset-mini": "^0.46.5",
    "@unocss/transformer-directives": "^0.46.5",
    "canvas": "^2.10.2",
    "commander": "^9.4.1",
    "fastify": "^4.9.2",
    "glob": "^8.0.3",
    "js-yaml": "^4.1.0",
    "magic-string": "^0.26.7",
    "markdown-it": "^13.0.1",
    "pino": "^8.7.0",
    "pino-pretty": "^9.1.1",
    "playwright": "^1.27.1",
    "playwright-chromium": "^1.27.1",
    "postcss": "^8.4.18",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^15.0.0",
    "postcss-minify-selectors": "^5.2.1",
    "postcss-nested": "^6.0.0",
    "postcss-normalize-whitespace": "^5.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "terser": "^5.15.1",
    "wait-on": "^6.0.1",
    "xml-js": "^1.6.11"
  },
  "devDependencies": {
    "@cowtech/eslint-config": "^8.7.5",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.18",
    "@types/glob": "^8.0.0",
    "@types/js-yaml": "^4.0.5",
    "@types/markdown-it": "^12.2.3",
    "@types/node": "^18.11.9",
    "@types/postcss-import": "^14.0.0",
    "@types/prettier": "^2.7.1",
    "@types/react": "^18.0.25",
    "@types/react-dom": "^18.0.9",
    "@types/wait-on": "^5.3.1",
    "eslint": "^8.26.0",
    "prettier": "^2.7.1",
    "typescript": "^4.9.3"
  }
}
